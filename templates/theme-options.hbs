<form action="#">
	<h3 class="flexrow">
		Argon - Combat HUD: Theme Options
        <button type="button" name="export" onclick="echThemeOptions.defaultOptions.createTheme();">
            <i class="fas fa-file-export">{{localize 'enhancedcombathudsw5e.themeOptions.export'}}</i>
        </button>
	</h3>
	<hr/>
	<div class="form-group" style="display: none;">
		<label>{{localize 'enhancedcombathudsw5e.themeOptions.fontFamilyTitle'}}</label>
		<div class="form-fields">
			<input type="text" name="font" value="{{themeOptions.font}}" data-dtype="String">
		</div>
		<p class="notes">{{localize 'enhancedcombathudsw5e.themeOptions.fontFamilyHint'}}</p>
    </div>
	<div class="form-group">
		<label>{{localize 'enhancedcombathudsw5e.themeOptions.themeTitle'}}</label>
		<div class="form-fields">
			<select name="theme">
				<option value="custom" selected="">Custom</option>
			</select>
		</div>
		<p class="hint">{{localize 'enhancedcombathudsw5e.themeOptions.themeHint'}}</p>
    </div>
	<ul class="echThemeOptionsContainer">
	{{#each themeOptions.colors}}
		<li>
			<h4 class="toggleOptions">{{echLocalize @key}}</h4>
			<ul>
			{{#each this}}
				{{#ifObject this}}
				<li>
					{{echLocalize @../key @key}}
					{{#each this}}
						<div>
							<button name="colored" is="colorpicker-button" data-setting="colors.{{@../../key}}.{{@../key}}.{{@key}}" data-color-type="{{@key}}" value="{{this}}"  data-responsive-color><i class="fas fa-eye-dropper"></i> {{echLocalize @key}}</button>
						</div>
					{{/each}}
				{{else}}
					<div>
						<button name="colored" is="colorpicker-button" data-setting="colors.{{@../key}}.{{@key}}" data-color-type="{{@key}}" value="{{this}}"  data-responsive-color><i class="fas fa-eye-dropper"></i> {{echLocalize @key}}</button>
					</div>
				</li>
				{{/ifObject}}
			{{/each}}
			</ul>
		</li>
	{{/each}}
	</ul>
	<footer class="sheet-footer flexrow">
		<button type="submit" name="submit">
			<i class="fas fa-save"></i> {{localize 'enhancedcombathudsw5e.themeOptions.save'}}
		</button>
    </footer>
</form>